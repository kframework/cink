<tests>

<!--
    Cink basic
-->

  <test
      definition="basic/cink.k"
      programs="basic/programs"
      results="basic/programs"
      extension="cink"
      exclude="fact.cink prim.cink sumn.cink"
      >
  </test>

<!--
    Cink threads
-->

  <test
      definition="threads/cink.k"
      programs="threads/programs"
      results="threads/programs"
      extension="cink"
      >
  </test>

<!--
    Cink ltlmc
-->

  <test
      definition="ltlmc/cink.k"
      programs="ltlmc/programs"
      results="ltlmc/programs"
      extension="cink"
      exclude="form-equiv.cink form-peterson.cink form-dekker.cink form-threads.cink" >
      <kompile-option name="-transition" value="kripke" />
      <program name="ltlmc/programs/dekker.cink">
        <krun-option name="-ltlmc" value="ltlmc/programs/form-dekker.cink" />
      </program>
      <program name="ltlmc/programs/peterson.cink">
        <krun-option name="-ltlmc" value="ltlmc/programs/form-peterson.cink" />
      </program>
      <program name="ltlmc/programs/peterson-wrong1.cink">
        <krun-option name="-ltlmc" value="ltlmc/programs/form-peterson.cink" />
      </program>
      <program name="ltlmc/programs/peterson-wrong2.cink">
        <krun-option name="-ltlmc" value="ltlmc/programs/form-peterson.cink" />
      </program>
      <program name="ltlmc/programs/threads.cink">
        <krun-option name="-ltlmc" value="ltlmc/programs/form-threads.cink" />
      </program>
  </test>

<!--
    Cink pointers
-->
  <test
      definition="pointers/cink.k"
      programs="pointers/programs"
      results="pointers/programs"
      extension="cink"
      >
  </test>

<!--
    Cink call-by-ref
-->
  <test
      definition="call-by-ref/cink.k"
      programs="call-by-ref/programs"
      results="call-by-ref/programs"
      exclude="callbyref.cink"
      extension="cink"
      >
  </test>
 
</tests>
